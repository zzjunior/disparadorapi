{
  "name": "seu-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager . Disparador --platform=win32 --arch=x64 --out=dist --overwrite",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.seuapp.id",
    "files": [
      "main.js",
      "renderer.js",
      "server.js",
      "index.html",
      "planilhas/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  }
}


